<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../style/heroes.css">
    <link rel="stylesheet" href="../style/style.css">
    <title>Heroes</title>
</head>
<body>
    <%- include('includes/header.ejs') %>
    <main>
        <ul> 
            <% for (const demon of demons){ %>
                <li>
                    <div class="container">
                        <div>
                            <h1><%= demon.name %></h1>
                            <address><%= demon.author %> </address>|<time> <%= demon.date %></time>
                            <p><%= demon.desc  %></p>
                        </div>

                        <div id="crud">
                            <form action="/delete" method="POST">
                                <input type="text" name="delete" value="<%= demon._id %>" hidden>
                                <button>Delete</button>
                            </form>
                                <a href="update/<%= demon._id %>"><button>update</button></a> 
                                <a href="view/<%= demon._id %>"><button>view</button></a>
                            
                        </div>
                        
                    </div>
                    <div class="container">
                        <img src="<%= demon.img %>" alt="" srcset="">
                    </div>
                </li>
                <% } %>
        </ul>
    </main>

</body>
</html>